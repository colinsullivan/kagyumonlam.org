{% extends "./layout.njk" %}

{% block main %}
    {% for item in quick_navigation_items %}
        <div class="row">
            <div class="col-xs-12 quick_navigation_box">
                <a class="row" href="{{item.href}}">
                    <figure class="col-xs-3">
                        <img src="{{item.thumbnail_img_src}}" />
                    </figure>
                    <span class="col-xs-9">
                        <h2>{{item.title}}</h2>
                        <p>{{item.subtitle}}</p>
                    </span>
                </a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
